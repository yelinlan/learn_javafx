            <Button fx:id="minus" layoutX="80.0" mnemonicParsing="false" onMouseClicked="#minusClick" text="减速" />
            <Button fx:id="save" layoutX="120.0" mnemonicParsing="false" onMouseClicked="#save" text="保存" />
        </children>
    </AnchorPane>
</AnchorPane>
